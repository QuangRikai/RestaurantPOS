<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_receptionist.xml"
    app:startDestination="@id/tableFragment">

    <fragment
        android:id="@+id/tableFragment"
        android:name="com.example.restaurantpos.ui.receptionist.table.TableFragment"
        android:label="fragment_table"
        tools:layout="@layout/fragment_table" >
        <action
            android:id="@+id/action_tableFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_tableFragment_to_orderedTableFragment"
            app:destination="@id/orderedTableFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.restaurantpos.ui.receptionist.order.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_tableFragment"
            app:destination="@id/tableFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderedTableFragment"
        android:name="com.example.restaurantpos.ui.receptionist.order.OrderedTableFragment"
        android:label="fragment_ordered_table"
        tools:layout="@layout/fragment_ordered_table" >
        <action
            android:id="@+id/action_orderedTableFragment_to_tableFragment"
            app:destination="@id/tableFragment" />
    </fragment>
    <fragment
        android:id="@+id/kitchenFragment"
        android:name="com.example.restaurantpos.ui.kitchen.KitchenFragment"
        android:label="fragment_kitchen"
        tools:layout="@layout/fragment_kitchen" />

</navigation>